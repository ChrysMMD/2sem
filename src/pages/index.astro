<style>
  body {
    background-color: var(--lightsand);
  }

  /* ----- section: portfolio start ----- */
  .portfoliobox {
    background-color: var(--lightsand);
    margin-top: 30px;
    margin-bottom: 30px;
    border-radius: 25px;
    border: 2px solid #f1cea4;
  }

  .cardgrid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    grid-template-rows: 1fr;
    gap: 1em;
  }

  .buttonbox {
    padding: 20px;
    text-align: center;
  }

  /* ----- section: portfolio slut ----- */

  /* ---- HEADER ----- */
  header {
    background-color: #6e5a59;
    width: 100%;
    height: auto;
    padding-bottom: 80px;
  }
  .header_tekst {
    width: fit-content;
    margin: auto;
    margin-top: 80px;
  }

  header h3 {
    font-family: Amiko;
    font-weight: lighter;
    font-size: 12px;
    color: var(--pink);
    text-align: center;
  }
  h1 {
    color: var(--lightsand);
    position: relative;
    font-size: 55px;
  }

  header h2 {
    font-size: 55px;
    position: absolute;
    margin-top: 3px;
    margin-left: -2px;
    text-align: center;
    color: #6e5a59;
    text-shadow:
      1px 1px 0 var(--darksand),
      -1px 1px 0 var(--darksand),
      -1px -1px 0 var(--darksand),
      1px -1px 0 var(--darksand);
  }

  header p {
    color: var(--lightsand);
    font-size: 12px;
    margin-top: -1px;
    text-align: center;
  }

  .full_reviews {
    display: none;
  }

  /* ----- CAUROSEL ----- 
  Link til code:
  https://codepen.io/anna_blok/pen/eYYRbQY

  Video:
  https://www.youtube.com/watch?v=1CZhGDU5cWM

  */
  #slides h2 {
    margin-bottom: 20px;
    color: #fbe9dd;
  }
  #slider {
    margin: 0 auto;
    max-width: 100%;
    text-align: center;
    background-color: #6e5a59;
    border-bottom: 1px solid var(--lightsand);
    padding-bottom: 10px;
  }
  .slide-content {
    height: 100%;
  }

  #slider input[type="radio"] {
    display: none;
  }
  #slider label {
    cursor: pointer;
    text-decoration: none;
  }
  #slides {
    padding: 10px;
    background: #6e5a59;
    position: relative;
    z-index: 1;
  }
  #overflow {
    width: 100%;
    overflow: hidden;
  }
  #slide1:checked ~ #slides .inner {
    margin-left: 0;
  }
  #slide2:checked ~ #slides .inner {
    margin-left: -100%;
  }
  #slide3:checked ~ #slides .inner {
    margin-left: -200%;
  }
  #slide4:checked ~ #slides .inner {
    margin-left: -300%;
  }
  #slides .inner {
    transition: margin-left 800ms cubic-bezier(0.77, 0, 0.175, 1);
    width: 400%;
    line-height: 1.5;
    height: 300px;
  }
  #slides .slide {
    width: 25%;
    float: left;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    color: #fff;
  }

  #controls {
    margin: -180px 0 0 0;
    width: 100%;
    height: 50px;
    z-index: 3;
    position: relative;
  }
  #controls label {
    transition: opacity 0.2s ease-out;
    display: none;
    width: 50px;
    height: 50px;
    opacity: 0.4;
  }
  #controls label:hover {
    opacity: 1;
  }
  #slide1:checked ~ #controls label:nth-child(2),
  #slide2:checked ~ #controls label:nth-child(3),
  #slide3:checked ~ #controls label:nth-child(4),
  #slide1:checked ~ #controls label:nth-last-child(2),
  #slide2:checked ~ #controls label:nth-last-child(3),
  #slide3:checked ~ #controls label:nth-last-child(4),
  #bullets {
    margin: 150px 0 0;
    text-align: center;
  }
  #bullets label {
    display: inline-block;
    width: 10px;
    height: 10px;
    border-radius: 100%;
    background: #ccc;
    margin: 0 10px;
  }
  #slide1:checked ~ #bullets label:nth-child(1),
  #slide2:checked ~ #bullets label:nth-child(2),
  #slide3:checked ~ #bullets label:nth-child(3),
  #slide4:checked ~ #bullets label:nth-child(4) {
    background: #444;
  }

  /* ---- CARUOUSEL SLUT ---- */
  h2 {
    align-items: center;
    text-align: center;
  }
  @media (min-width: 700px) {
    /* ----- section: portfolio start ----- */
    .cardgrid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
      grid-template-rows: 1fr;
      gap: 2em;
      padding: 40px;
    }

    /* ----- section: portfolio slut ----- */
    .indhold {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr 1fr;
      width: 100%;
      background-color: var(--darksand);
      padding: 10px;
      gap: 10px;
    }
  }

  @media (min-width: 850px) {
    #slides {
      width: 100%;
    }

    #slider {
      padding-bottom: 50px;
      padding-left: 45px;
      padding-right: 45px;
    }
    #overflow {
      display: none;
    }

    #bullets {
      display: none;
    }

    #controls {
      display: none;
    }

    .full_reviews {
      display: flex;
      gap: 30px;
      justify-content: flex-start;
      align-items: flex-start;
      align-self: center;
    }
  }
</style>
